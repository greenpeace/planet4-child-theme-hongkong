<a class="card-update compact" href="{{ post.link }}">
  <div class="thumbnail" style="background-image: url({{ post.img_url }});"></div>
  <div class="box">
    <div class="meta-box">
      <div>
        <span class="issue {{ post.main_issue_slug }}">{{ post.main_issue }}</span>
        <span>{{ post.news_type }}</span>
      </div>
    </div>
    <p>
      {{ post.post_title|e('wp_kses_post')|raw }}
    </p>
    <div class="meta-box">
      <div>
        {% if post.reading_time %}
          <span>
            <span class="icon-clock"></span>
            {{ post.reading_time|e('wp_kses_post')|raw }}
          </span>
        {% endif %}
        <span>{{ post.post_date|date }}</span>
      </div>
    </div>
  </div>
</a>
