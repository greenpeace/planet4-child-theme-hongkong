# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
# Tab indentation (4 spaces size)
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4

# hipster frontend indentation
[*.{js,css,scss,sass}]
indent_style = space
indent_size = 2
